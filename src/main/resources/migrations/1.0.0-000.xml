            </column>
            <column name="maximum_wins" type="int">
                <constraints nullable="true"/>
            </column>
            <column name="maximum_wins_percentage" type="int">
                <constraints nullable="true"/>
            </column>
            <column name="maximum_earnings" type="double">
                <constraints nullable="true"/>
            </column>
            <column name="maximum_earnings_percentage" type="double">
                <constraints nullable="true"/>
            </column>
        </createTable>
        <addPrimaryKey tableName="formulas_stats" columnNames="draw_id, draws_count"/>
        <addForeignKeyConstraint baseTableName="formulas_stats" baseColumnNames="draw_id" constraintName="formulas_stats_draw_id_fk"
                                 referencedTableName="draws" referencedColumnNames="id"/>
        <addForeignKeyConstraint baseTableName="formulas_stats" baseColumnNames="starting_draw_id" constraintName="formulas_stats_starting_draw_id_fk"
                                 referencedTableName="draws" referencedColumnNames="id"/>
        <addForeignKeyConstraint baseTableName="formulas_stats" baseColumnNames="finishing_draw_id"
                                 constraintName="formulas_stats_finishing_draw_id_fk" referencedTableName="draws" referencedColumnNames="id"/>

        <createTable tableName="formulas_stats_formulas">
            <column name="draw_id" type="int">
                <constraints nullable="false" foreignKeyName="formulas_stats_formulas_draw_id_draws_count_fk"/>
            </column>
            <column name="draws_count" type="int">
                <constraints nullable="false" foreignKeyName="formulas_stats_formulas_draw_id_draws_count_fk"/>
