            <column name="interval" type="int" defaultValue="0">
                <constraints nullable="false"/>
            </column>
            <column name="relative_freq" type="double" defaultValue="0.0">
                <constraints nullable="false"/>
            </column>
            <column name="average_interval" type="double" defaultValue="0.0">
                <constraints nullable="false"/>
            </column>
