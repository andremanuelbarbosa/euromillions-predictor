        <addPrimaryKey tableName="draws_stats_stars" columnNames="draw_id, star"/>
        <addForeignKeyConstraint baseTableName="draws_stats_stars" baseColumnNames="draw_id" constraintName="draws_stats_stars_draw_id_fk"
